@model Blog_MVC.Models.Category
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="well">
        <h1><b>Изтриване на категория</b></h1>
        @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name,"Найменование на категория", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Отказ", "List", "Category", new { @class = "btn btn-default" })
                    <input type="submit" value="Изтриване" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
<hr />
