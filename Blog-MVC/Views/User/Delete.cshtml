@model Blog_MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Изтриване на потребител";
}

<div class="container body-content span-8 offset-2">
    <div class="well">
        <h1><b>@ViewBag.Title</b></h1>

        @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName,"Потребителско име", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FullName,"Пълно име", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    @Html.ActionLink("Отказ", "List", "User", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Изтрий" class="btn btn-danger" />
                </div>
            </div>
        }

    </div>
</div>
<hr />
