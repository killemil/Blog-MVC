@model List<Blog_MVC.Models.Category>

@{
    ViewBag.Title = "List";
}
<div class="container">
    <div class="well">
        <h2>Списък категории</h2>
        <div class="row">
            <table class="table table-striped table- table-bordered col-sm-12">
                <thead>
                    <tr>
                        <th>Име на категория</th>
                        <th>Брой статии</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.OrderBy(c=> c.Name))
                    {
                        <tr>
                            <td>@Html.ActionLink(@category.Name, "ListByCategory", "Home", new { @id = category.Id }, null)</td>
                            
                            <td>
                                @category.Articles.Count
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
