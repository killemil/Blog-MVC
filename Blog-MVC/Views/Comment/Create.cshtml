@model Blog_MVC.Models.Comment



<div class="container">
    <div class="well">
        <h1><b>Създаване на коментар</b></h1>
        <h1>&emsp;@ViewBag.Article.Title</h1>
        <dl class="dl-horizontal">
            <dt>Съдаржание</dt>
            <dd> @ViewBag.Article.Body</dd>
            <p>
            </p>
            <dt> Дата на публикуване</dt>
            <dd> @ViewBag.Article.Date</dd>
        </dl>
        
           
        @using (Html.BeginForm("Create", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Text,"Коментар", new { @class = "control-label col-sm-2" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Text, new { @class = "form-control", @rows = "5"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Назад", "Index","Article", null , new { @class = "btn btn-default" })
                    <input type="submit" value="Коментирай" class="btn btn-warning" />
                </div>
            </div>
        }

    </div>
</div>

